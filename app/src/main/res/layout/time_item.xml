<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="right"
            android:layout_marginRight="130dp"
            android:id="@+id/user_nick"
            android:layout_toRightOf="@id/circularImage1"
            android:textSize="18sp"
            android:textColor="@color/text_black_color33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nicole Elliott"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:background="@drawable/shadow_bg"
            android:clickable="true"
            android:orientation="vertical"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <TextView
                android:layout_marginRight="120dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/home_text_color"
                android:text="@string/school"/>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cn.com.timemachine.view.supertextview.SuperButton
                        android:id="@+id/super_lable1"
                        app:sSolidColor="@color/label_one"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        app:sCornersRadius="5dp"
                        android:textColor="@color/white"
                        android:paddingLeft="10dp"
                        android:textSize="13sp"
                        android:paddingRight="10dp"
                        android:text="加血"
                        />
                    <cn.com.timemachine.view.supertextview.SuperButton
                        android:id="@+id/super_lable2"
                        app:sSolidColor="@color/label_two"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        app:sCornersRadius="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:paddingLeft="10dp"
                        android:textSize="13sp"
                        android:paddingRight="10dp"
                        android:text="五连杀"
                        />
                    <cn.com.timemachine.view.supertextview.SuperButton
                        android:id="@+id/super_lable3"
                        app:sSolidColor="@color/label_three"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_marginLeft="10dp"
                        app:sCornersRadius="10dp"
                        android:textColor="@color/white"
                        android:paddingLeft="10dp"
                        android:textSize="13sp"
                        android:paddingRight="5dp"
                        android:text="皇冠三颗星"
                        />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/text_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-10-19  21:00 ~ 22:30"
                    android:textColor="@color/text_color"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <cn.com.timemachine.view.supertextview.SuperButton
                            android:id="@+id/super_delect"
                            android:layout_gravity="right"
                            app:sSolidColor="@color/gay_text"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            app:sCornersRadius="5dp"
                            android:textColor="@color/white"
                            android:paddingLeft="15dp"
                            android:textSize="16sp"
                            android:paddingRight="15dp"
                            android:text="删除"
                            />
                        <cn.com.timemachine.view.supertextview.SuperButton
                            android:id="@+id/super_order"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="right"
                            app:sSolidColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            app:sCornersRadius="5dp"
                            android:textColor="@color/white"
                            android:paddingLeft="15dp"
                            android:textSize="16sp"
                            android:paddingRight="15dp"
                            android:text="查看"
                            />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="17dp"
        android:background="@drawable/home_bg"
        android:layout_width="90dp"
        android:layout_height="90dp">
        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/circularImage1"
            android:layout_centerInParent="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:siBorderWidth="4dp"
            android:src="@mipmap/header"
            app:siBorderColor="@color/white"
            />
    </RelativeLayout>
</RelativeLayout>